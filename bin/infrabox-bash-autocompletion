#!/usr/bin/env bash

_infrabox_completion() {
    local IFS=$'
    '

    COMPREPLY=( $( $1 complete "${COMP_WORDS[*]}" $COMP_CWORD ) )
}

_infrabox_completionsetup() {
    local COMPLETION_OPTIONS=""
    local BASH_VERSION_ARR=(${BASH_VERSION//./ })
    # Only BASH version 4.4 and later have the nosort option.
    if [ ${BASH_VERSION_ARR[0]} -gt 4 ] || ([ ${BASH_VERSION_ARR[0]} -eq 4 ] && [ ${BASH_VERSION_ARR[1]} -ge 4 ]); then
        COMPLETION_OPTIONS="-o nosort"
    fi
    complete $COMPLETION_OPTIONS -F _infrabox_completion $1
}

_infrabox_completionsetup infrabox;
_infrabox_completionsetup infrabox-client;
